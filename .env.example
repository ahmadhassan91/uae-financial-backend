# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/uae_financial_health_dev
DATABASE_URL_TEST=postgresql://postgres:password@localhost:5432/uae_financial_health_test

# Security - Balanced approach for usability and security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_TOKEN_EXPIRE_MINUTES=120  # 2 hours max (will auto-refresh)
TOKEN_REFRESH_THRESHOLD_MINUTES=10  # Auto-refresh when 10 min left
MAX_TOKEN_REFRESH_COUNT=24  # Max refreshes per day

# Email Configuration (for scheduled reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development

# CORS Origins (React frontend)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# AWS S3 Configuration (for PDF reports)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
USE_S3_STORAGE=false  # Set to true to use S3 instead of local storage

# Downloads Directory (for local PDF storage when S3 is disabled)
DOWNLOAD_DIR=./downloads

# Backend URLs
BACKEND_BASE_URL=http://localhost:8000
PRODUCTION_BACKEND_URL=https://your-app.herokuapp.com

# Frontend URLs
FRONTEND_BASE_URL=http://localhost:3000
PRODUCTION_BASE_URL=https://your-frontend.netlify.app
