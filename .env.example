# ==================================================
# UAE Financial Health Backend - Environment Variables
# ==================================================
# Copy this file to .env and configure your values
# For Heroku: Set these in Settings > Config Vars

# ==================================================
# Database Configuration
# ==================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/uae_financial_health_dev
DATABASE_URL_TEST=postgresql://postgres:password@localhost:5432/uae_financial_health_test

# ==================================================
# Security
# ==================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ADMIN_TOKEN_EXPIRE_MINUTES=120
TOKEN_REFRESH_THRESHOLD_MINUTES=10
MAX_TOKEN_REFRESH_COUNT=24

# ==================================================
# Email Configuration (for scheduled reports)
# ==================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ==================================================
# Redis Configuration (for Celery)
# ==================================================
REDIS_URL=redis://localhost:6379/0

# ==================================================
# Environment
# ==================================================
ENVIRONMENT=development

# ==================================================
# CORS Origins (IMPORTANT for production)
# ==================================================
# Comma-separated list of allowed frontend URLs
# For production, set your actual Netlify URLs here
# Example: CORS_ORIGINS=https://your-app.netlify.app,https://your-other-app.netlify.app
CORS_ORIGINS=

# Allowed Hosts - comma-separated list
ALLOWED_HOSTS=

# ==================================================
# File Storage
# ==================================================
UPLOAD_DIR=./uploads
DOWNLOAD_DIR=./downloads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (optional - for PDF reports)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=
USE_S3_STORAGE=false

# ==================================================
# URLs (for email links, PDF generation, etc.)
# ==================================================
# Development URLs (defaults)
BACKEND_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:3000

# Production URLs (set these for production deployment)
# These are used for generating links in emails, PDFs, etc.
PRODUCTION_BACKEND_URL=
PRODUCTION_BASE_URL=
